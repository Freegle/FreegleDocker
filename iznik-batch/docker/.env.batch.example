# Example environment file for batch Docker deployment
# Copy to .env and fill in your values:
#   cp .env.batch.example .env

# =============================================================================
# APPLICATION
# =============================================================================

# Generate with: php artisan key:generate --show
APP_KEY=

# =============================================================================
# GIT SYNC
# =============================================================================

# Git repository URL (SSH format)
GIT_REPO=git@github.com:Freegle/iznik-batch.git

# Branch to track (auto-merged from master after tests pass)
GIT_BRANCH=production

# Path to SSH key directory (must contain id_rsa or similar)
GIT_SSH_KEY_PATH=./ssh

# =============================================================================
# DATABASE (External - not in Docker)
# =============================================================================

DB_HOST=your-database-host.example.com
DB_PORT=3306
DB_DATABASE=iznik
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# =============================================================================
# MAIL
# =============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_smtp_user
MAIL_PASSWORD=your_smtp_password
MAIL_FROM_ADDRESS=noreply@ilovefreegle.org
MAIL_FROM_NAME=Freegle

# =============================================================================
# WORKER POOLS
# =============================================================================

# Maximum concurrent MJML compilations
POOL_MJML_MAX=20

# MJML permit timeout in seconds (0 = block forever)
POOL_MJML_TIMEOUT=30

# Maximum concurrent digest workers
POOL_DIGEST_MAX=10

# =============================================================================
# SENTRY (Optional)
# =============================================================================

SENTRY_LARAVEL_DSN=
SENTRY_ENVIRONMENT=production
