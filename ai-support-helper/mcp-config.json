{
  "mcpServers": {
    "freegle-logs": {
      "type": "stdio",
      "command": "node",
      "args": ["/app/mcp-log-server.js"],
      "env": {
        "MCP_QUERY_URL": "http://freegle-status:3000/api/mcp/query",
        "REQUIRE_APPROVAL": "false"
      }
    },
    "freegle-db": {
      "type": "stdio",
      "command": "node",
      "args": ["/app/mcp-db-server.js"],
      "env": {
        "STATUS_URL": "http://freegle-status:3000",
        "REQUIRE_APPROVAL": "false"
      }
    }
  },
  "permissions": {
    "allow": [
      "Read(/app/codebase/**)",
      "Glob(/app/codebase/**)",
      "Grep(/app/codebase/**)",
      "mcp__freegle-logs__query_logs",
      "mcp__freegle-db__query_database"
    ],
    "deny": [
      "Bash",
      "Write",
      "Edit",
      "WebFetch",
      "WebSearch",
      "Task"
    ]
  }
}
